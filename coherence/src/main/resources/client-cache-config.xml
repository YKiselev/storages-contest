<?xml version="1.0"?>
<!DOCTYPE cache-config SYSTEM "cache-config.dtd">
<cache-config>

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>Items</cache-name>
            <scheme-name>distributed</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>

        <near-scheme>
            <scheme-name>near</scheme-name>
            <front-scheme>
                <local-scheme>
                    <high-units>2000000</high-units>
                    <expiry-delay>5m</expiry-delay>
                </local-scheme>
            </front-scheme>
            <back-scheme>
                <distributed-scheme>
                    <scheme-ref>distributed</scheme-ref>
                </distributed-scheme>
            </back-scheme>
            <!--<refresh-ahead-factor>0.5</refresh-ahead-factor>-->
        </near-scheme>

        <distributed-scheme>
            <scheme-name>distributed</scheme-name>
            <service-name>DistributedBinaryCache</service-name>
            <serializer>pof</serializer>
            <backing-map-scheme>
                <local-scheme/>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>

    </caching-schemes>

</cache-config>
